<?xml version="1.0" encoding="utf-8"?>
<com.tianye.mobile.well.view.CheckableRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navigation_drawer_list_item_selector"
    >

    <ImageView
        android:id="@+id/navigation_drawer_item_icon"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />
    <TextView
        android:layout_toRightOf="@id/navigation_drawer_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:id="@+id/navigation_drawer_item_name"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:textColor="#212121"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_centerVertical="true"/>

</com.tianye.mobile.well.view.CheckableRelativeLayout>